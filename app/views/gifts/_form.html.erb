<%=form_for(@gift) do |f| %>
  <div class="row form-group">
    <%=render 'shared/gift_error_messages' %>
    <div class="col-xs-2 col-xs-offset-2">
      <div class="line-break">
        <%=f.label :donor %>
        <span class="required-field-marker">*</span>
      </div>
      <%= @donor_id %>
      <%=f.select :donor_id, options_for_select(@donors, :selected => @gift.donor_id || params[:donor_id]), include_blank: "Select a donor", class: 'form-control input-sm dropdown-menu' %>
    <%= link_to 'Find Donors', hyper_surf_donors_path, class: "button"%>
    </div>
    <div class="col-xs-2">
      <div class="line-break">
        <%=f.label :activity %>
        <span class="required-field-marker">*</span>
      </div>
      <%=f.select :activity_id,  options_for_select(@activities, :selected => @gift.activity_id || params[:activity_id]), include_blank: "Select an activity", class:'form-control input-sm dropdown-menu' %>
    </div>
  </div> <!-- row -->

  <div class="row form-group">
    <div class="col-xs-2 col-xs-offset-2">
      <%=f.label :donation_date %>
      <span class="required-field-marker">*</span>
      <%=f.date_field :donation_date, class: 'form-control input-sm' %>
    </div>
    <div class="col-xs-2">
      <%=f.label :amount %>
      <span class="required-field-marker">*</span>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%=f.number_field :amount, class: 'form-control input-sm' %>
      </div>
    </div>
  </div> <!-- row -->

  <div class="row form-group">
    <div class="col-xs-2 col-xs-offset-2">
      <%=f.label :gift_type %>
        <span class="required-field-marker">*</span>
        <%=f.select(:gift_type, options_for_select([["Cash", "Cash"], ["Check", "Check"], ["Credit Card/Debit Card", "Credit Card/Debit Card"]], :selected => @gift.gift_type),{},:class => "form-control")%>
    </div>
    <div class="col-xs-2">
      <%= f.label :solicited_by %>
      <%= f.text_field :solicited_by, class: 'form-control input-sm' %>
    </div>
  </div>
  
  <div class="row form-group">
    <div class="col-xs-2 col-xs-offset-2">
      <%=f.label :check_date %>
      <%=f.date_field :check_date, class: 'form-control input-sm' %>
    </div>
    <div class="col-xs-2">
      <%= f.label :check_number %>
      <%= f.number_field :check_number, class: 'form-control input-sm' %>
    </div>
  </div> <!-- row -->
  
  <div class="row form-group">
    <div class="col-xs-2 col-xs-offset-2">
      <%= f.label :pledge %>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%=f.number_field :pledge, class: 'form-control input-sm' %>
      </div>
    </div>
    <div class="col-xs-2">
      <div class="line-break">
        <%= f.label :anonymous %>
      </div>
      <%=f.select(:anonymous, options_for_select([["Yes", true], ["No", false]], :selected => @gift.anonymous), include_blank: "Select here",:class => "form-control")%>
    </div>
  </div> <!-- row -->
  
  <div class="row form-group">
    <div class="col-xs-2 col-xs-offset-2">
      <%= f.label :gift_user %>
      <%= f.text_field :gift_user, class: 'form-control input-sm' %>
    </div>
    <div class="col-xs-2">
      <%= f.label :gift_source %>
      <%= f.text_field :gift_source, class: 'form-control input-sm' %>
    </div>
  </div> <!-- row -->
  
  <div class="row form-group">
    <div class="col-xs-4 col-xs-offset-2">
      <%=f.label :memorial_note %>
        </br>
        <%=f.text_area :memorial_note, placeholder: "Enter notes here...", cols: "95", rows: "2", class: "form_control, input-sm" %>
    </div>
  </div> <!-- row -->

  <div class="row form-group">
    <div class="col-xs-4 col-xs-offset-2">
      <%=f.label :notes %>
        </br>
        <%=f.text_area :notes, placeholder: "Enter notes here...", cols: "95", rows: "5", class: "form_control, input-sm" %>
    </div>
  </div> <!-- row -->

  <div class=" row form-group">
    <div class="col-xs-8 col-xs-offset-1 text-center">
      <%=f.submit yield(:button_text), class: "btn btn-success" %>
        &nbsp;
        <%=link_to "Cancel", gifts_path(:activity_id => @gift.activity_id, :donor_id => @gift.donor_id), class: "btn btn-warning" %>
    </div>
  </div> <!-- row -->
  
  <% if !@gift.new_record? %>
    <div class="row form-group form-delete">
      <div class="col xs-1 col-xs-offset-7">
        <span class="glyphicon glyphicon-minus icon-donna-regular icon-donna-delete"></span>
        <%= link_to "Delete Gift", @gift, method: :delete, data: { confirm: "Are you sure that you want to permanently remove this gift from the database? This action cannot be undone." } %>
      </div>
    </div>
  <% end %>
<% end %>